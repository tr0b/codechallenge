@model IEnumerable<codechallenge.Models.tbUserProject>
@using System.Web.UI.WebControls;
@{
    ViewBag.Title = "Index";
}
    <head>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script>
            $(function () {
                $("#ddluser").selectmenu();
        </script>
    </head>
<h2>Index</h2>
<p style="text-align:center">
    <script type="text/javascript" src="~/Scripts/jquery-3.4.1.js"></script>
    <select name="user" id="ddluser">
        <option>John Doe</option>
        <option selected="selected">Jane Doe</option>
        <option>Jack Doe</option>
    </select>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FK_UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FK_ProjectID)
        </th>
        <th>
            Active
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssignedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FK_UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FK_ProjectID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PK_UserProject }) |
                @Html.ActionLink("Details", "Details", new { id = item.PK_UserProject }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PK_UserProject })
            </td>
        </tr>
    }

</table>
